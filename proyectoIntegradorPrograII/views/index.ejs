<!DOCTYPE html>
<html lang="es">
	<%- include("./partials/head") %>
<body>
	<!-- Header -->
		<%- include("./partials/header") %>

	<!-- Banner -->
	<div class="banner">
		<img src="./images/BANNER.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<% for (let i=0; i<4;i++){ %>

			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products">
						<figure class="product-box_image">
							<img src="<%=informacion[i].imagen %>" alt="<%=informacion[i].nombreDelProducto %>">
						</figure>
						<article class="product-box_data">
							<h2><%=informacion[i].nombreDelProducto %></h2>
							<p><%=informacion[i].descripcion %></p>
							<p>Comentarios: <%=informacion[i].comentarios%></p>
						</article>
						</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>

	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i=4; i<8;i++){ %>

			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products">
						<figure class="product-box_image">
								<img src="<%=informacion[i].imagen %>" alt="foto vinilo">
						</figure>
							<article class="product-box_data">
								<h2><%=informacion[i].nombreDelProducto %></h2>
								<p><%=informacion[i].descripcion %></p>
								<p>Comentarios: <%=informacion[i].comentarios%></p>
							</article>
							</a>
					</a>
				</section>
			</div>
			<% } %>

		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<% - include ('partials/footer') %>
	<!-- /footer -->
</body>	
</html>