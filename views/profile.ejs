<!DOCTYPE html>
<html lang="es">
	<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<%- include("./partials/headerLogueado") %> 
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">

		<% for (let i=0; i<informacion.length;i++){ %>

			<div class="img-container offset-3 col-2">
				<img src="<%= informacion[i].fotoPerfil%>" alt="foto de perfil" class="foto-perfil">
			</div>

			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= informacion[i].usuario %> 
						<a href="/user/profile/profile-edit">
							<i class="fas fa-cog"  style="color:#c3124a;"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		<% } %>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->

			<% for (let i=6; i<10;i++){ %>

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products">
							<figure class="product-box_image">
								<img src="<%=informacionProductos[i].imagen %>" alt="<%=informacionProductos[i].nombreDelProducto%>">
							</figure>
							<article class="product-box_data">
								<h2><%=informacionProductos[i].nombreDelProducto %></h2>
								<p><%=informacionProductos[i].descripcion %></p>
								<p>Comentarios: <%=informacionProductos[i].comentarios%></p>
							</article>
							</a>
					</section>
				</div>
				<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>