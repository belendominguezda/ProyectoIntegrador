<!DOCTYPE html>
<html lang="es">
	<%- include("./partials/head") %>
<body>
	<!-- Header -->
		<% if (locals.user != undefined) {%>
			<%- include("./partials/headerLogueado") %>
		<% } else { %>
			<%- include("./partials/header") %>
		<% } %>

	<!-- Banner -->
	<p>
		<% if (locals.errors) {%>
			<p class="errorsMessage" style="color: red"><%= errors.message%></p> 
		<% } %>
	</p>
	<div class="banner">
		<img src="./images/BANNER.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h1 class="products-title">Novedades</h1>
			</div>
			<!-- Show the "ultimos" products -->

			<% for (let i=0; i < info.length; i++){ %>
			
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%=info[i].id%>">
						<figure class="product-box_image">
							<img src="<%- info[i].imagenProducto %>">
						</figure>
						<article class="product-box_data">
							<h2><%= info[i].nombreProducto%></h2>
							<p><%= info[i].descripcionProducto%></p>
							<p>Comentarios : <%= info[i].comentario.length%></p>
							<p>Publicado por <a href="/user/profile/<%=info[i].usuario.id%>"><%= info[i].usuario.usuario%></a></p>
						</article>
						</a>
				</section>
			</div>
		<%} %>
		</div>
	</div>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
	
</body>	
</html>