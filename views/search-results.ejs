<!DOCTYPE html>
<html lang="es">
	<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) {%>
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header") %>
	<% } %>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
					<% for (let i=0; i < info.length; i++){ %>

						<a href="/products">
							<figure class="product-box_image">
								<img src="/images/1.webp" alt="Nombre del producto //">
							</figure>
							<article class="product-box_data">
								<h2><%=info[i].nombreProducto %></h2>
								<p><%=info[i].descripcionProducto %></p>
								<p>Comentarios: <%=info[i].comentarios%></p>
								<% if (locals.user != undefined) {%>
									<p>Publicado por: <a href="/user/profile"> <%=info[i].usuario.usuario%></a></p> 
								<% } else { %>
									<p>Publicado por: <%=info[i].usuario.usuario%></p>	
								<% } %>
	
					<% } %>
							</article>
							</a>
					</section>
				</div>
		


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>